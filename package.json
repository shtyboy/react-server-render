{
  "name": "react-server-render",
  "private": false,
  "description": "react server render demo",
  "version": "0.0.1",
  "author": "shty1990@163.com",
  "repository": {
    "type": "git"
  },
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./dist/server/server.js",
    "server": "cross-env NODE_ENV=development node ./server",
    "clean:client": "rm -fr ./dist/client",
    "clean:server": "rm -fr ./dist/server",
    "build:client": "npm run clean:client && cross-env NODE_ENV=production webpack --progress --colors --config ./webpack/webpack.build.prod.js",
    "build:server": "npm run clean:server && cross-env NODE_ENV=production webpack --progress --colors --config ./webpack/webpack.build.server.js",
    "prebuild": "echo -e '\\033[32m *** build 开始打包 *** \\033[0m' ",
    "postbuild": "echo -e '\\033[32m *** 打包完毕 *** \\033[0m' ",
    "build": "npm run build:client && npm run build:server",
    "build:dev": "npm run clean:client && cross-env NODE_ENV=development webpack --progress --colors --config ./webpack/webpack.build.prod.js && npm run clean:server && cross-env NODE_ENV=development webpack --progress --colors --config ./webpack/webpack.build.server.js",
    "dev": "cross-env NODE_ENV=development nodemon ./server/dev --watch ./server",
    "startpm2": "cross-env NODE_ENV=development port=3001 pm2 start ./dist/server/server.js --name app && pm2 logs app",
    "pm2": "pm2",
    "test": "mocha --compilers js:babel-register --require ./test/test_helper.js --recursive",
    "test:watch": "npm run test -- --watch",
    "lint": "eslint --ext .jsx,.js ./api ./client ./config ./server ./test ./unit",
    "lint-fix": "eslint --fix  --ext .jsx,.js ./api ./client ./config ./server ./test ./unit",
    "gulp": "gulp imagemin"
  },
  "engines": {
    "node": ">=5"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-polyfill": "^6.7.2",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.2",
    "body-parser": "^1.15.0",
    "compression": "^1.6.1",
    "cross-env": "^3.1.4",
    "css-loader": "^0.23.1",
    "css-modules-require-hook": "^4.0.5",
    "express": "^4.13.4",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "history": "^2.0.1",
    "isomorphic-fetch": "^2.2.1",
    "json-loader": "^0.5.4",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "loader-utils": "^0.2.12",
    "method-override": "^2.3.5",
    "morgan": "^1.7.0",
    "postcss-less": "^0.15.0",
    "postcss-loader": "^1.3.1",
    "react": "^15.0.0",
    "react-dom": "^15.0.0",
    "react-redux": "^5.0.1",
    "react-router": "^3.0.0",
    "redux": "^3.6.0",
    "redux-logger": "^2.6.1",
    "redux-thunk": "^2.0.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.6",
    "webpack": "^1.12.14"
  },
  "devDependencies": {
    "asset-require-hook": "^1.0.2",
    "babel-eslint": "^7.1.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-enzyme": "^0.6.1",
    "enzyme": "^2.7.0",
    "eslint": "^3.0.1",
    "eslint-config-standard": "^6.0.0",
    "eslint-config-standard-react": "^4.0.0",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-html": "^2.0.0",
    "eslint-plugin-promise": "^3.0.0",
    "eslint-plugin-react": "^6.0.0",
    "eslint-plugin-standard": "^2.0.0",
    "gulp": "^3.9.1",
    "gulp-imagemin": "^3.1.1",
    "html-webpack-plugin": "^2.28.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "pm2": "^2.2.3",
    "pre-commit": "^1.2.2",
    "react-addons-test-utils": "^15.0.0",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "webpack-dev-middleware": "^1.5.1",
    "webpack-hot-middleware": "^2.10.0"
  }
}
